<main>
  <header>
    <div>name</div>
    <div>profile</div>
  </header>



  <div class="container">
    <%= form_with model: VitalSign.new, url: vital_signs_path do |f| %>
      <ul class="slider">
        <li>
          <div class="list">
            <%= f.number_field :body_temperature, placeholder: "体温",style: "text-align: center;" %>
          </div>
        </li>
        <li>
          <div class="blood-CSS">
            <%= f.number_field :blood_pressure_systolic, placeholder: "血圧・上",style: "text-align: center;" %>
            <span>/</span>
            <%= f.number_field :blood_pressure_diastolic, placeholder: "血圧・下",style: "text-align: center;" %>
          </div>
        </li>
        <li>
          <div class="list">
            <%= f.number_field :pulse, placeholder: "脈拍",style: "text-align: center;" %>
          </div>
        </li>
        <li>
          <div class="list">
            <%= f.number_field :breathing, placeholder: "呼吸",style: "text-align: center;" %>
          </div>
        </li>
        <li>
          <div class="note">
            <%= f.text_area :note, placeholder: "memo" %>
          </div>
        </li>
        <li>
          <% if action_name == "index" %>
            <%= f.hidden_field :measured_at, value: Time.current %>
          <% else %>
            <%= f.datetime_select :measured_at %>
          <% end %>
        </li>
      </ul>
      <%= f.submit "登録", class: "submit-btn" %>
    <% end %>

    <div class="pictogram" style="background-image: url(<%= asset_path 'cat_cake2.png' %>)"></div>

  </div>
  
  
</main>