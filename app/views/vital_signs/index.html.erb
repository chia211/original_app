
<main>

  <div class="container">
    <%= form_with model: VitalSign.new, url: profile_vital_signs_path(@profile) do |f| %>
      <ul class="slider">
        <li>
          <div class="temperature-field">
            <%= f.number_field :body_temperature, placeholder: "体温",style: "text-align: center;", step: 0.1, id: "temperature_input"  %>
          </div>
        </li>
        <li>
          <div class="blood-CSS">
            <%= f.number_field :blood_pressure_systolic, placeholder: "血圧・上",style: "text-align: center;",id: "blood_systolic_input" %>
            <span>/</span>
            <%= f.number_field :blood_pressure_diastolic, placeholder: "血圧・下",style: "text-align: center;",id: "blood_diastolic_input" %>
          </div>
        </li>
        <li>
          <div>
            <%= f.number_field :pulse, placeholder: "脈拍",style: "text-align: center;",id: "pulse_input" %>
          </div>
        </li>
        <li>
          <div class="breathing-field">
            <%= f.number_field :breathing, placeholder: "酸素濃度",style: "text-align: center;",id: "breathing_input" %>
          </div>
        </li>
        <li>
          <div class="note">
            <%= f.text_area :note, placeholder: "memo" %>
          </div>
        </li>
        <li>
          <%= f.submit "登録", class: "submit-btn" %>
        </li>
        <li>
          <% if action_name == "index" %>
            <%= f.hidden_field :measured_at, value: Time.current %>
          <% else %>
            <%= f.datetime_select :measured_at %>
          <% end %>
        </li>
      </ul>


    <% end %>
    <%= link_to '体温履歴', temperature_history_profile_vital_signs_path(@profile), class: "btn" %>

    <div class="pictogram" style="background-image: url(<%= asset_path '25858438.png' %>)"></div>

  </div>
  <div class="container2">
  </div>
  
  
</main>