<div class="contents">
  <div class="new_profile">
    <div>編集</div>
    <%= form_with(model: @profile, local: true) do |form| %>
      <%= form.text_field :nickname, placeholder: "ニックネーム" %>
      <%= form.text_field :gender, placeholder: "性別" %>
      <%= form.number_field :height, placeholder: "身長" %>
      <%= form.number_field :weight, placeholder: "体重" %>
      <%= form.text_field :medical_history, placeholder: "病歴" %>
      <%= form.date_field :birthday, placeholder: "誕生日" %>
      <%= form.number_field :age, placeholder: "年齢" %>
      <%= form.submit "登録" %>
    <% end %>
  </div>
</div>